@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@using GetFitness02
@using System.Collections.Generic;
@using System.Linq;
@namespace GetFitness02
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link asp-href-include="~/css/style.css" rel="stylesheet" />
    <link asp-href-include="~/css/imageslider.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Saira+Stencil+One|Saira:400,700&display=swap" rel="stylesheet">

    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: grey;
            font-size: 16px;
            font-family: 'Saira Stencil One', cursive;
            font-family: 'Saira', sans-serif;
            padding: 0;
            margin: 0;
        }

        .container {
            display: grid;
        }

        .login {
            float: right;
            display: grid;
            justify-items: end;
            padding: 10px;
        }

        td, th {
            padding-left: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login" style="float:right;">
            @await Html.PartialAsync("_LoginPartial")
        </div>

        <!--Navigation Menu-->
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index" class="logo">GET</a></li>
                <li class="link"><a asp-controller="ApplicationUser" asp-action="Index">Profile</a></li>
                <li class="link"><a asp-controller="ActivityEntries" asp-action="Index">Board</a></li>
                <li class="link"><a asp-controller="ActivityEntries" asp-action="Create">New activity </a></li>
            </ul>
        </nav>
        <div id="top-box">
            <br>
            <div class="grid-container">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
                <div><p class="logo logochange">GET</p></div>
                <div style="text-align: left; padding-left: 2%;">
                    <p class="text-frontpage">every  motion calculated </p>
                    <p style="margin-top: 0; margin-bottom: 0;"> result of <span style="color:#EE882A;">calories</span> burned </p>
                    <button><a asp-controller="ActivityEntries" asp-action="Index">New Activity</a></button>
                </div>
            </div>
        </div>

        @*<div class="navbar-collapse collapse">
                <div style="float:left;"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></div>
            </div>*@
        <div class="container body-content">
            @RenderBody()
        </div>
    </div>
    @RenderSection("Scripts", false)

    <script src="~/javascript/slide.js" asp-append-version="true"></script>
</body>
</html>
