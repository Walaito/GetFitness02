@model LoginViewModel
@using Microsoft.AspNetCore.Identity
@using GetFitness02.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Index";
}

<h1 class="text">User Profile</h1>
<div>
    @if (SignInManager.IsSignedIn(User))
    {
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <div style="text-align:center;">
                <div style="padding-left:20px;">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Hello @UserManager.GetUserName(User)!</a>
                </div>
                @*<div>
                    @Html.DisplayNameFor(model => model.FullName)
                </div>*@
                <div>
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
                </div>
            </div>
        </form>
    }
    else
    {
        <div>
            <div class="btn-submit">Already have an account?<strong><a asp-area="" asp-controller="Account" asp-action="Login"> Log in</a></strong></div>
        </div>
    }
</div>

